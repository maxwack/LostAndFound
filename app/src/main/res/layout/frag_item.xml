<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                    android:layout_height="match_parent">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

        <ImageView
                android:id="@+id/img_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_reg_date"
                android:layout_alignBottom="@id/img_item"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@id/itemName"
                android:contentDescription="state of the item"
                app:srcCompat="@drawable/question_mark" />

        <ImageView
                android:id="@+id/img_item"
                android:layout_width="94dp"
                android:layout_height="80dp"
                android:layout_alignParentStart="true"
                android:layout_marginEnd="5dp"
                android:contentDescription="@string/image_desc"
                app:srcCompat="@drawable/unknown" />

        <TextView
                android:id="@+id/itemName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/item_reg_date"
                android:layout_toEndOf="@id/img_item"
                android:text="Wallet" />

        <TextView
                android:id="@+id/item_reg_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="2019/08/14"
                android:textAlignment="textEnd" />

        <TextView
                android:id="@+id/string_at"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/itemName"
                android:layout_toEndOf="@id/img_item"
                android:text="@string/at" />

        <TextView
                android:id="@+id/item_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/itemName"
                android:layout_toStartOf="@id/item_reg_date"
                android:layout_toEndOf="@id/string_at"
                android:text="TextView" />

        <TextView
                android:id="@+id/string_shortDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/string_at"
                android:layout_toStartOf="@id/item_reg_date"
                android:layout_toEndOf="@id/img_item"
                android:text="@string/shortDesc" />

    </RelativeLayout>

</androidx.cardview.widget.CardView >